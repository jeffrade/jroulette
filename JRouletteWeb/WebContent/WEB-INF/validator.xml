<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE form-validation PUBLIC 
    "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1//EN" 
    "http://jakarta.apache.org/commons/dtds/validator_1_1.dtd">

<form-validation>
    <formset>
    	<form name="JRouletteWebUser">
			<field property="firstName" depends="required">
				<arg0 key="user.first.name" />
			</field>
			<field property="lastName" depends="required">
				<arg0 key="user.last.name" />
			</field>
			<field property="userName" depends="required">
				<arg0 key="user.user.name" />
			</field>
			<field property="email" depends="required,email">
				<arg0 key="user.email" />
			</field>
			<field property="verifyEmail" depends="validwhen">
				<arg0 key="user.email.not.matching" />
				<var>
					<var-name>test</var-name>
					<var-value>(*this* == email)</var-value>
				</var>
			</field>
            <field property="password" depends="required,minlength">
            	<arg0 key="user.password" />
            	<arg1 name="minlength" key="${var:minlength}" resource="false" />
                <var>
			    	<var-name>minlength</var-name>
			        <var-value>6</var-value>
			    </var>
				
			</field>
			<field property="verifyPassword" depends="validwhen">
				<arg0 key="user.password.not.matching" />
				<var>
					<var-name>test</var-name>
					<var-value>(*this* == password)</var-value>
				</var>
			</field>
        </form>
        
        <form name="ChangePassword">
        	<field property="password" depends="required,minlength">
            	<arg0 key="user2.password" />
            	<arg1 name="minlength" key="${var:minlength}" resource="false" />
                <var>
			    	<var-name>minlength</var-name>
			        <var-value>6</var-value>
			    </var>
			</field>
			<field property="newPassword" depends="required,minlength">
            	<arg0 key="user2.newPassword" />
            	<arg1 name="minlength" key="${var:minlength}" resource="false" />
                <var>
			    	<var-name>minlength</var-name>
			        <var-value>6</var-value>
			    </var>
			</field>
			<field property="verifyNewPassword" depends="validwhen">
				<arg0 key="user2.password.not.matching" />
				<var>
					<var-name>test</var-name>
					<var-value>(*this* == newPassword)</var-value>
				</var>
			</field>
        </form>
        
        <form name="roulettePlayer">
			<field property="money" depends="required,intRange">
				<arg0 key="playerBean.money" />
				<arg1 name="intRange" key="${var:min}" resource="false" />
        		<arg2 name="intRange" key="${var:max}" resource="false" />
                <var>
			    	<var-name>min</var-name>
			        <var-value>1</var-value>
			    </var>
			    <var>
			    	<var-name>max</var-name>
			        <var-value>1000</var-value>
			    </var>
			</field>
			<field property="table" depends="required">
				<arg0 key="playerBean.table" />
			</field>
        </form>
        

<!--  ### TEST FORMS ### -->
<!--  ################## -->
<!--  ################## -->
<!--  ################## -->        
        <form name="personDataWizard">
			<field property="firstName" depends="required" page="0">
				<arg0 key="person.first.name" />
			</field>
			<field property="lastName" depends="required" page="0">
				<arg0 key="person.last.name" />
			</field>
			<field property="email" depends="required,email" page="0">
				<arg0 key="person.email" />
			</field>
            <field property="password" depends="required" page="1">
				<arg0 key="person.password" />
			</field>
			<field property="verifyPassword" depends="validwhen" page="1">
				<arg0 key="person.password.not.matching" />
				<var>
					<var-name>test</var-name>
					<var-value>(*this* == password)</var-value>
				</var>
			</field>
        </form>        
    </formset>
</form-validation>
